{
  "manifest_version": 3,
  "name": "n8n Copilot",
  "version": "2.0.1",
  "description": "Generate n8n workflow/node JSON using your OpenAI, Gemini, Claude, etc., API keys.",
  "author": "farhan",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
    "content_scripts": [
      {
        "matches": [
         "<all_urls>"          
        ],
        "js": [
          "/script/content-script.js"
        ],
        "run_at": "document_end"
      }
    ],
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "n8n Workflow Copilot"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "sidePanel",
    "notifications",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "host_permissions": [
    "https://login.n8ncopilot.com/*",
    "http://localhost:5678/*",
    "https://app.n8n.cloud/*",
    "https://*.n8n.cloud/*",
    "https://tally.so/*",
    "https://www.googleapis.com/*",
    "https://n8ncopilot-dc0f9.web.app/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*", "assets/icon128.png", "assets/icon48.png", "assets/icon32.png", "assets/icon16.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "107561843421-m5cri8domgfrav1afbdkvtks5te6mopa.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}
